<% if flash[:notice] %>
 <div class="notice">
     <%= flash[:notice] %>
 </div>
<% end %>
<body>
  <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
            <td>
              <%= book.title %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td>
              <%= link_to "Show", book_path(book) %>
              <%= link_to "Edit", edit_book_path(book) %>
              <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
      <% end %>
      </tbody>
    </table>

<h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="error-message">
      error<br>
    </div>
    <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  <%end%>

    <%= form_with model:@book, local:true do |f| %>
    <div class="field">
      <label>Title</label>
        <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
        <%=f.text_area :body %>
    </div>
      <%=f.submit'Create Book'%>

    <% end %>
</body>

