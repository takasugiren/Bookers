<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <%= link_to"show", book_path(book.id) %>
            <%= link_to"edit", edit_book_path(book.id) %>
            <%= link_to"destroy", destroy_book_path(book.id) %>
          </td>
      </tr>
      <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<div class="field">
  <label>Title</label>
<%= f.text_field :title %>
</div>
<div class="field">
  <label>Body</label>
<%=f.text_area :body %>
</div>

<%=f.submit'Create Book'%>

<% end %>

