<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <div class="error-message">
      error<br>
    </div>
   <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
   <% end %>
  <% end %>
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <label>Title</label>
      <%= f.text_field :title %>
  </div>
  <div class="field">
    <label>Body</label>
      <%=f.text_area :body %>
  </div>
  <div class="action">
    <%=f.submit'Update Book'%>
  </div>
    <%= link_to"Show", book_path(@book.id)%>
      |
    <%= link_to"Back", books_path %>
<% end %>

